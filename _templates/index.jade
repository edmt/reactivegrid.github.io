//-YAML
|---
|layout: default
|title: Your New Jekyll Site
|---

{% for post in site.posts %}
.post
  h2.post-title
    a(href='{{ post.url }}') {{ post.title }}
  .post-data
    span by
      a(href='#'){{post.author }}
      | on {{ post.date | date_to_string }}
    br
    br
  .post-body
    {{ post.content }}
{% endfor %}
